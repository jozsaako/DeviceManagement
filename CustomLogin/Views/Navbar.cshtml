<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-default" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="brand">
                    <b style="font-size:20px; font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">Logged in as: </b>@Session["userName"]
                </div>
            </div>
        </div>
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav ">
                <li class="divider-vertical"></li>
                <li><a href="@Url.Action("LogOut", "Login")" style="color: red;">Log Out</a></li>
            </ul>
            @if (Session["isAdmin"].Equals(true))
            {
                <ul class="nav navbar-nav ">
                    <li class="divider-vertical"></li>
                    <li><a href="@Url.Action("Index", "users")">User List</a></li>
                </ul>
            }
            <ul class="nav navbar-nav navbar-right">
                <li class="divider-vertical"></li>
                <li><a href="@Url.Action("deviceList", "devices")">Device List</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="divider-vertical"></li>
                <li><a href="@Url.Action("Index", "devices")">My Devices</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="divider-vertical"></li>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            </ul>
        </div>
    </div>


    <div>
        @RenderBody()
    </div>
</body>
</html>
