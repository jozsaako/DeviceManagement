@model CustomLogin.Models.user

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/Style/login.css" rel="stylesheet" />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/Login.js"></script>
    <title>Index</title>

</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <a class="active" id="login-form-link">Login</a>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                            @using (Html.BeginForm("Autherize", "Login", FormMethod.Post, new { style = "display: block;" }))
                            {
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.userName, new { htmlAttributes = new { placeholder = "Username", @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.ValidationMessageFor(model => model.userName)
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { placeholder = "Password", @class = "form-control"} })
                                    </div>
                                    <div class="form-group">
                                        @Html.ValidationMessageFor(model => model.password)
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="submit" name="login-submit" id="login-submit" class="form-control btn btn-login" value="Log In">
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <input type="button" onclick="location.href='@Url.Action("Register", "Login")'" name="register" id="register" class="form-control btn btn-register" value="Register">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                <div class="field-validation-error">
                                                    @Html.DisplayFor(model => model.LoginErrorMessage)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            }  
                       </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
