@model CustomLogin.Models.device

@{
    Layout = "~/Views/Navbar.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/Login.js"></script>
    <title>Create</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <a href="#" class="active" id="register-form-link">Add New Device</a>
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.DName, new { htmlAttributes = new { placeholder = "Device Name", tabindex = "1", @class = "form-control" } })
                                    </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.DName)
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.DManufacturer, new { htmlAttributes = new { placeholder = "Device Manufacturer", tabindex = "2", @class = "form-control" } })
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.DManufacturer)
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.DType, new { htmlAttributes = new { placeholder = "Device Type", tabindex = "3", @class = "form-control" } })
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.DType)
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.DOS, new { htmlAttributes = new { placeholder = "Device Operating System", tabindex = "4", @class = "form-control" } })
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.DOS)
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.DOSVersion, new { htmlAttributes = new { placeholder = "Device Operating System Version", tabindex = "5", @class = "form-control" } })
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.DOSVersion)
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.DProcessor, new { htmlAttributes = new { placeholder = "Device Processor", tabindex = "6", @class = "form-control" } })
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.DProcessor)
                                        </div>
                                        <div class="form-group">
                                            @Html.EditorFor(model => model.DRAM, new { htmlAttributes = new { placeholder = "Device RAM", tabindex = "7", @class = "form-control" } })
                                        </div>
                                        <div class="form-group">
                                            @Html.ValidationMessageFor(model => model.DRAM)
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6 col-sm-offset-3">
                                                    <input type="submit" name="create" id="create" tabindex="9" class="form-control btn btn-register" value="Add Device">
                                                </div>
                                            </div>
                                        </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
