@model CustomLogin.Models.device

@{
    Layout = "~/Views/Navbar.cshtml";
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Style/device.css" rel="stylesheet" />
    <link href="~/Style/login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/Login.js"></script>
    <title>Unassign</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-15 col-md-offset custyle">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>device</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.DeviceID)

                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(model => model.DName, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.DName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align: center" } })
                                    @Html.ValidationMessageFor(model => model.DName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DManufacturer, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.DManufacturer, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align: center" } })
                                    @Html.ValidationMessageFor(model => model.DManufacturer, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DType, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.DType, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align: center" } })
                                    @Html.ValidationMessageFor(model => model.DType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DOS, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.DOS, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align: center" } })
                                    @Html.ValidationMessageFor(model => model.DOS, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DOSVersion, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.DOSVersion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align: center" } })
                                    @Html.ValidationMessageFor(model => model.DOSVersion, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DProcessor, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.DProcessor, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align: center" } })
                                    @Html.ValidationMessageFor(model => model.DProcessor, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.DRAM, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.DRAM, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @style = "text-align: center" } })
                                    @Html.ValidationMessageFor(model => model.DRAM, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Unassign" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

</html>
